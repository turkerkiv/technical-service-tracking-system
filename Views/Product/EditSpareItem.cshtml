@model ListSpareItemViewModel

<div class="w-full bg-slate-700 h-full px-36 py-16 flex flex-col justify-start items-center space-y-5">
    <h1 class="text-4xl font-semibold text-white ">Edit Spare Item</h1>
    <form method="post" asp-controller="Product" asp-action="EditSpareItem" class="flex flex-col items-end space-y-5 text-gray-300 justify-start border rounded p-10">
        <input type="hidden" asp-for="SpareItemId">
        <div class="">
            <label asp-for="SpareItemName" class="me-2 text-xl"></label>
            <input asp-for="SpareItemName" placeholder="LCD panel..."
                class="ring-1 ring-gray-400 rounded px-4 py-2 bg-transparent outline-none focus:border-none hover:bg-slate-700 focus:ring-2 focus:ring-gray-400 focus:bg-slate-700 transition duration-100" />
            <span asp-validation-for="SpareItemName" class="text-red-400 block mt-1 text-end text-xs font-medium"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Stock" class="me-2 text-xl"></label>
            <input asp-for="Stock" placeholder="50..."
                class="ring-1 ring-gray-400 rounded px-4 py-2 bg-transparent outline-none focus:border-none hover:bg-slate-700 focus:ring-2 focus:ring-gray-400 focus:bg-slate-700 transition duration-100" min="0"/>
            <span asp-validation-for="Stock" class="text-red-400 block mt-1 text-end text-xs font-medium"></span>
        </div>
        <div class="mb-3">
            @Html.Partial("_Button", "Save")
        </div>
    </form>
</div>