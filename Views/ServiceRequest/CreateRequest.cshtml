@model ServiceRequestViewModel

<div class="w-full bg-slate-700 h-full px-36 py-10 flex flex-row justify-start space-x-10 items-start text-gray-300 pb-52">
    <form asp-controller="ServiceRequest" asp-action="CreateRequest" method="post" class="flex flex-row space-x-10 h-full">
        <input type="hidden" asp-for="CustomerProductId">
        <div class="flex flex-col items-end">
            <div class="mb-3 flex flex-col w-full space-y-2">
                <label asp-for="ProductName" class="me-2 text-xl"></label>
                <input readonly asp-for="ProductName"
                    class="ring-1 ring-gray-400 rounded px-4 py-2 bg-transparent outline-none focus:border-none hover:bg-slate-700 focus:ring-2 focus:ring-gray-400 focus:bg-slate-700 transition duration-100" />
                <span asp-validation-for="ProductName"
                    class="text-red-400 block mt-1 text-end text-xs font-medium"></span>
            </div>
            <div class="mb-3 flex flex-col w-full space-y-2">
                <label asp-for="SerialNumber" class="me-2 text-xl"></label>
                <input readonly asp-for="SerialNumber"
                    class="ring-1 ring-gray-400 rounded px-4 py-2 bg-transparent outline-none focus:border-none hover:bg-slate-700 focus:ring-2 focus:ring-gray-400 focus:bg-slate-700 transition duration-100" />
                <span asp-validation-for="SerialNumber"
                    class="text-red-400 block mt-1 text-end text-xs font-medium"></span>
            </div>
            <div class="mb-3 flex flex-col w-full space-y-2">
                <label asp-for="WarrantyStartDate" class="me-2 text-xl"></label>
                <input readonly asp-for="WarrantyStartDate"
                    class="ring-1 ring-gray-400 rounded px-4 py-2 bg-transparent outline-none focus:border-none hover:bg-slate-700 focus:ring-2 focus:ring-gray-400 focus:bg-slate-700 transition duration-100" />
                <span asp-validation-for="WarrantyStartDate"
                    class="text-red-400 block mt-1 text-end text-xs font-medium"></span>
            </div>
            <div class="mb-3 flex flex-col w-full space-y-2">
                <label asp-for="WarrantyEndDate" class="me-2 text-xl"></label>
                <input readonly asp-for="WarrantyEndDate"
                    class="ring-1 ring-gray-400 rounded px-4 py-2 bg-transparent outline-none focus:border-none hover:bg-slate-700 focus:ring-2 focus:ring-gray-400 focus:bg-slate-700 transition duration-100" />
                <span asp-validation-for="WarrantyEndDate"
                    class="text-red-400 block mt-1 text-end text-xs font-medium"></span>
            </div>
            <div class="mb-3 flex flex-col space-y-2">
                <input type="hidden" asp-for="HasWarranty">
                <span class="self-center inline-block px-2 py-1 rounded-lg text-xs font-medium
                                @(Model.HasWarranty ? " bg-green-200 text-green-800" : "bg-red-200 text-red-800" )">
                    @(Model.HasWarranty ? "In Warranty" : "Out of Warranty")
                </span>
            </div>
        </div>
        <div class="flex flex-col items-end">
            <div class="mb-3 flex flex-col h-full w-full space-y-2">
                <label asp-for="FaultDetails" class="me-2 text-xl"></label>
                <textarea placeholder="e.g. My battery got swollen..." asp-for="FaultDetails"
                    class="h-full ring-1 ring-gray-400 rounded px-4 py-2 bg-slate-800 outline-none focus:border-none hover:ring-2 focus:ring-2  focus:bg-slate-800 transition duration-100"
                    rows="5" cols="35" style="resize: none;"></textarea>
                <span asp-validation-for="FaultDetails"
                    class="text-red-400 block mt-1 text-end text-xs font-medium"></span>
            </div>
            <div>
                @Html.Partial("_Button", "Send Request")
            </div>
        </div>
    </form>
    <div class="flex flex-row justify-center items-center bg-gray-600 w-full h-full">
        <h1>Placeholder product's image</h1>
    </div>
</div>