@{
ViewData["Title"] = "Home Page";
}

<div class="bg-slate-700 w-full h-full flex flex-row justify-between space-x-24 px-36 py-10">
    <div class="w-full h-full flex flex-col justify-center items-center space-y-10 -mt-14">
        <div class="p-10 space-y-4">
            <h1 class="text-6xl font-bold text-white">Welcome to the technical service.</h1>
            <h1 class="text-2xl font-semibold text-white">Please login or register.</h1>
        </div>
        <div class="flex flex-col space-y-5">
            <a asp-controller="Account" asp-action="Login"
                class="text-3xl w-52 text-center inline-block px-8 py-4 transition duration-100 text-white bg-transparent border border-gray-400 rounded hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent">
                Login
            </a>
            <a asp-controller="Account" asp-action="Register"
                class="text-3xl w-52 text-center inline-block px-8 py-4 transition duration-100 text-white bg-transparent border border-gray-400 rounded hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent">
                Register
            </a>
        </div>
    </div>
    <div class="w-full h-full pt-10">
        <img src="~/img/undraw_bug_fixing_oc-7-a.svg" alt="">
    </div>
</div>