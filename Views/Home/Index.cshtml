@{
ViewData["Title"] = "Home Page";
}

<div class="bg-slate-700 w-full h-full flex flex-row justify-between space-x-24 px-36 py-10">
    <div class="w-full h-full flex flex-col justify-center items-center space-y-10 -mt-14">
        @if(!User.Identity.IsAuthenticated)
        {
        <div class="p-10 space-y-4">
            <h1 class="text-6xl font-bold text-white">Welcome to the technical service.</h1>
            <h2 class="text-2xl font-semibold text-white">Please login or register.</h2>
        </div>
        <div class="flex flex-col space-y-5">
            <a asp-controller="Account" asp-action="Login"
                class="text-3xl w-52 text-center inline-block px-8 py-4 transition duration-100 text-white bg-transparent border border-gray-400 rounded hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent">
                Login
            </a>
            <a asp-controller="Account" asp-action="Register"
                class="text-3xl w-52 text-center inline-block px-8 py-4 transition duration-100 text-white bg-transparent border border-gray-400 rounded hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent">
                Register
            </a>
        </div>
        }
        else if(User.IsInRole("Customer"))
        {
        <div class="p-10 space-y-4">
            <h1 class="text-6xl font-bold text-white">Welcome to the technical service <span
                    class="border-b">@User.FindFirstValue(ClaimTypes.UserData)</span>.</h1>
            <h2 class="text-2xl font-semibold text-white">To get service from us, you can see and add your products from
                below.</h2>

        </div>
        <div class="flex flex-col space-y-5">
            <a asp-controller="Product" asp-action="MyProducts"
                class="text-3xl w-52 text-center inline-block px-8 py-4 transition duration-100 text-white bg-transparent border border-gray-400 rounded hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent">
                My Products
            </a>
        </div>
        }else if(User.IsInRole("Technician") || User.IsInRole("Admin"))
        {
        <div class="space-y-4">
            <h1 class="text-6xl font-bold text-white">Welcome to the technical service <span
                    class="border-b">@User.FindFirstValue(ClaimTypes.UserData)</span>.</h1>
            <h2 class="text-2xl font-semibold text-white">You can see your pending jobs from below.</h2>
        </div>
        <div class="flex flex-col space-y-5">
            <a asp-controller="ServiceRequest" asp-action="ServiceRequests"
                class="text-3xl w-52 text-center inline-block px-8 py-4 transition duration-100 text-white bg-transparent border border-gray-400 rounded hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent">
                Service Requests
            </a>
            <a asp-controller="Product" asp-action="SpareItems"
                class="text-3xl w-52 text-center inline-block px-8 py-4 transition duration-100 text-white bg-transparent border border-gray-400 rounded hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:border-transparent">
                Spare Items
            </a>
        </div>
        }
    </div>
    <div class="w-full h-full pt-10">
        <img src="~/img/undraw_bug_fixing_oc-7-a.svg" alt="">
    </div>
</div>